{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-standard"
  ],
  // "extends": [
  //   "tslint:recommended",
  //   "tslint-config-prettier"
  // ],
  "jsRules": {},
  "rules": {
    "max-line-length": {
      "options": [120],
      "severity": "warn"
    },
    "no-console": {
      "severity": "warning",
      "options": [
          "debug",
          "info",
          "log",
          "time",
          "timeEnd",
          "trace"
      ]
    }
  },
  "rulesDirectory": []
}